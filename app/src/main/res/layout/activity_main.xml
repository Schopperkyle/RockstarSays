<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#262625"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/redButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/red_highlight" />

    <Button
        android:id="@+id/blueButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/greenButton"
        android:layout_alignTop="@+id/redButton"
        android:background="@drawable/blue_highlight" />

    <Button
        android:id="@+id/yellowButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/redButton"
        android:layout_marginTop="225dp"
        android:background="@drawable/yellow_highlight" />

    <Button
        android:id="@+id/greenButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/yellowButton"
        android:layout_marginEnd="50dp"
        android:background="@drawable/green_highlight" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="135dp"
        android:text="Score: 0"
        android:textColor="#cccccc"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:text="High Score: 0"
        android:textColor="#cccccc"
        android:textSize="25sp" />

    <Button
        android:id="@+id/StartOverButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:onClick="start"
        android:text="Start Over"
        android:textSize="18sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/turnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textColor="#cccccc"
        android:textSize="19sp" />


</RelativeLayout>

